<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ScrollView
    
    
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    
    <TextView 
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTACT"
        android:id="@+id/contact_id"
        android:textSize="30sp"
        android:textStyle="bold"
       	android:layout_centerHorizontal="true"
        android:padding="5dp"
        />
    <ImageView 
        android:layout_width="match_parent"
    android:layout_height="5dp"
    android:id="@+id/contact_strip1"
    android:background="@raw/strip"
    android:contentDescription="@string/desc"
    android:layout_below="@+id/contact_id"
     android:padding="5dp"
        />
    
    <ImageView 
         android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/contact_image"
    android:background="@raw/kripson"
    android:contentDescription="@string/desc"
    android:layout_below="@+id/contact_strip1"
     android:padding="5dp"
        />
     <ImageView 
        android:layout_width="match_parent"
    android:layout_height="5dp"
    android:id="@+id/contact_strip2"
    android:background="@raw/strip"
    android:contentDescription="@string/desc"
    android:layout_below="@+id/contact_image"
     android:padding="5dp"
        />
    <TextView 
        android:layout_below="@+id/contact_strip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Details"
        android:id="@+id/contact_new"
        android:textSize="20sp"
        android:textStyle="bold"
       	android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        />
	<TextView 
	     android:layout_below="@+id/contact_new"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="Visit our website for more information. 
        Feel free "
        android:id="@+id/contact_new1"
        android:textSize="20sp"
        android:textStyle="bold"
       	android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:background="@raw/viewback"
        android:layout_marginTop="10dp"
	    />
	
</RelativeLayout>
</ScrollView>
</LinearLayout>